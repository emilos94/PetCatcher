{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}\\src\\*.c",
                "${workspaceFolder}\\src\\core\\*.c",
                "${workspaceFolder}\\src\\graphics\\*.c",
                "${workspaceFolder}\\src\\datastructures\\*.c",
                "-I",
                "${workspaceFolder}\\dependencies\\include",
                "-I",
                "${workspaceFolder}\\src",
                "-o",
                "${workspaceFolder}\\build\\main.exe",
                "-L${workspaceFolder}\\dependencies\\lib",
                "${workspaceFolder}\\dependencies\\lib\\glfw3.dll",
                "${workspaceFolder}\\dependencies\\lib\\cglm.lib",
                "-lopengl32",
                "-lkernel32",
                "-lgdi32",
                "-luser32",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}